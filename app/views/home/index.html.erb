  <div class="table-container rounded border shadow-sm overflow-hidden">
    <table class="table table-sm table-hover table-striped align-middle mb-0">
      <thead class="table-light">
        <tr>
          <th>Name</th>
          <th>Business Type</th>
          <th>State </th>
          <th>Days</th>
          <th>Added</th>
          <th class="text-end no-sort" data-sort-method="none">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td>
              <%= link_to customer.name, show_customer_path(customer) %>
            </td>
            <td><%= customer.business_type.name %></td>
            <td><%= customer.state %></td>
            <td>
              <% customer.days.each do |day| %>
                <span class="badge bg-success me-1"><%= day.name_short %></span>
              <% end %>
            </td>
            <td class="text-nowrap text-muted small">
              <%= customer.created_at.in_time_zone("Eastern Time (US & Canada)").strftime("%b %-d, %Y %l:%M %p") %>
            </td>
            <td class="text-end">
              <button class="btn btn-sm btn-outline-warning me-1">
                <i class="fa-solid fa-pencil"></i>
              </button>
              <button class="btn btn-sm btn-outline-danger">
                <i class="fa-solid fa-trash-can"></i>
              </button>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>